<div class="container myBooks">
<div class="row">
  <div class="col-md-6">
    <h1>All Books</h1>
    <p>Click the <i class="fa fa-exchange"></i> to request a trade!
  </div>
</div>   
<div class="row">
  {{#each books}}
    {{#if requesterid}}
    <div class="col-md-2">
      <div class="card">
        <img class="card-img-top" src="{{imgurl}}" alt="{{title}}" title="{{title}}">
          <button type="submit" class="close overlay" disabled>
            <span aria-hidden="true"><i class="fa fa-lock"></i></span>
          </button>
      </div>
    </div>
    {{else}}
    <div class="col-md-2">
      <form method="post" action="/allbooks/request" enctype="application/x-www-form-urlencoded">
      <div class="card">
        <img class="card-img-top" src="{{imgurl}}" alt="{{title}}" title="{{title}}">
          <button type="submit" class="close overlay">
            <span aria-hidden="true"><i class="fa fa-exchange"></i></span>
          </button>
      </div>
      <input type="hidden" value="{{_id}}" name="bookid">
      </form>
    </div>
    {{/if}}
  {{/each}}
</div>
</div>