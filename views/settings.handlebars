<div class="container signup">
  <h1>Sign Up</h1>
  <form method="post" action="/updateprofile" enctype="application/x-www-form-urlencoded" id="updateProfileForm">
    <div class="form-group">
      <label for="cityInput">City</label>
      <input type="text" class="form-control" name="city" id="cityInput" required>
    </div>
  <div class="form-group">
    <label for="stateInput">State</label>
    <input type="text" class="form-control" name="state" id="stateInput" required>
    {{#if usermsg}}
    <small class="form-text text-danger">{{usermsg}}</small>
    {{/if}}
  </div>
  <button type="submit" class="btn btn-success" id="profileBtn">Save Changes</button>
  </form>
  <h1>Change Password</h1>
  <form method="post" action="/changepassword" enctype="application/x-www-form-urlencoded" id="changePasswordForm">
  <div class="form-group">
    <label for="oldpassword">Old Password</label>
    <input type="password" class="form-control" name="oldpassword" id="oldpassword" required>
  </div>
  <div class="form-group">
    <label for="password1">New Password</label>
    <input type="password" class="form-control" name="password1" id="password1" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required>
  </div>
  <div class="form-group">
    <label for="password2">Confirm Password</label>
    <input type="password" class="form-control" name="password2" id="password2" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required>
  </div>
  <button type="submit" class="btn btn-success" id="changePasswordBtn">Save Changes</button>
  </form>
</div>
<script src="/js/settings.js"></js>