
<div class="container myBooks">
<div class="row">
  <div class="col-md-6">
    <h1>My Books</h1>
  </div>
</div>   
<div class="row">
  <div class="col-md-4">  
    <form method="post" action="/mybooks" enctype="application/x-www-form-urlencoded" id="myBooksForm">
      <div class="form-group">
        <div class="input-group myBookSearch">
          <input type="text" class="form-control" name="book" placeholder="Search for...">
          <span class="input-group-btn">
            <button class="btn btn-primary" type="submit">Add</button>
          </span>
        </div>
      </div>
    </form>
  </div>
</div>
<div class="row">
  {{#each books}}
    <div class="col-md-2">
      <form method="post" action="/mybooks/remove" enctype="application/x-www-form-urlencoded">
      <div class="card">
        <img class="card-img-top" src="{{imgurl}}" alt="{{title}}" title="{{title}}">
          <button type="submit" class="close overlay" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
      </div>
      <input type="hidden" value="{{_id}}" name="bookid">
      </form>
    </div>
  {{/each}}
</div>
</div>